.container{:"ng-controller" => "MainCtnl"}
  %h1 NG content
  %div{class: "ng-view"}

  %h4= "Hi #{@reader.email}!"
  %form
    %input{name: 'url', placeholder: 'URL'}
    %textarea{name: 'body', placeholder: 'Article body'}

  %p These are all the readers:
  %ol
    - for r in @readers
      %li= r.email

  %p The articles:
  %ol
    - for a in @articles
      %li
        = "#{a.title}"
        %span.italic= "by #{a.author}"
        - if a.curators.empty?
          %p.italic No curators :(
        - else
          %p Curated by 
          - for c in a.curators
            %span.bold= "#{c.email}, "

  %a{href: "/logout"}
    %button Log out
